generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  userId              Int       @id @default(autoincrement())
  full_name           String
  username            String    @unique
  email               String    @unique
  password_hash       String?
  has_password        Boolean   @default(false)
  auth_provider       String?
  github_id           String?
  github_access_token String?
  google_id           String?
  profile_pic_url     String?
  resetToken          String?   @unique
  resetTokenExpiry    DateTime?
  bio                 String?
  role                Role      @default(USER)
  total_points        Int       @default(0)

  // Relations
  submissions     Submission[] // Link back to submissions
  problemStatuses UserProblemStatus[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Category {
  categoryId  Int     @id @default(autoincrement())
  name        String  @unique
  slug        String  @unique
  description String? @db.Text

  // Relations
  problems Problem[] // Many-to-many relationship

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model TestCase {
  id             Int     @id @default(autoincrement())
  input          String  @db.Text
  expectedOutput String  @db.Text
  isSample       Boolean @default(false) // If true, show to user. If false, hidden.

  problemId Int
  problem   Problem @relation(fields: [problemId], references: [problemId], onDelete: Cascade)

  @@map("test_cases")
}

model Problem {
  problemId  Int    @id @default(autoincrement())
  title      String
  content    String @db.Text
  difficulty String // EASY, MEDIUM, HARD

  functionName String @default("solution")
  starterCode  Json

  timeLimit   Float @default(1.0)
  memoryLimit Int   @default(128)

  // Relations
  categories   Category[]
  testCases    TestCase[]
  submissions  Submission[]
  userStatuses UserProblemStatus[]

  // NEW: Relation to Challenges via Join Table
  challenges ChallengeProblem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("problems")
}

model Submission {
  id         String @id @default(uuid())
  problemId  Int
  userId     Int
  code       String @db.Text
  languageId Int
  status     String // "ACCEPTED", "WRONG_ANSWER", "COMPILATION_ERROR"

  // --- ADDED FOR DETAILED REPORTS ---
  totalPassed Int @default(0) // How many test cases passed
  totalCases  Int @default(0) // Total cases at the time of submission

  memory      Int?
  time        Float?
  token       String?  @unique
  failMessage String?
  createdAt   DateTime @default(now())

  problem Problem @relation(fields: [problemId], references: [problemId])
  user    User    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map("submissions")
}

model UserProblemStatus {
  id        Int    @id @default(autoincrement())
  userId    Int
  problemId Int
  status    String // "SOLVED", "ATTEMPTED"

  // Relations
  user    User    @relation(fields: [userId], references: [userId], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [problemId])

  @@unique([userId, problemId]) // This is key: one record per user per problem
  @@map("user_problem_status")
}

model Challenge {
  challengeId Int     @id @default(autoincrement())
  title       String
  slug        String  @unique
  description String? @db.Text
  bannerUrl   String?

  // Rules
  isPublic  Boolean   @default(false)
  startTime DateTime?
  endTime   DateTime?

  // Many-to-many through join table
  problems ChallengeProblem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("challenges")
}

model ChallengeProblem {
  challenge   Challenge @relation(fields: [challengeId], references: [challengeId], onDelete: Cascade)
  challengeId Int

  problem   Problem @relation(fields: [problemId], references: [problemId], onDelete: Cascade)
  problemId Int

  order  Int @default(0) // Problem sequence: 1, 2, 3...
  points Int @default(100) // Optional: specific points for this challenge

  @@id([challengeId, problemId]) // Composite Primary Key
  @@map("challenge_problems")
}
